<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Базовая конфигурация: доверяем системным и пользовательским CA -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>

    <!-- Специальная конфигурация для вашего домена -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">t7lvb7zl-8080.euw.devtunnels.ms</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
</network-security-config>